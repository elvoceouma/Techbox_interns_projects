<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- TREE VIEW -->

        <record id="view_rahisi_customer_tree" model="ir.ui.view">
            <field name="name">rahisi.customer.tree</field>
            <field name="model">rahisi.customer</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->

        <record id="view_rahisi_customer_form" model="ir.ui.view">
            <field name="name">rahisi.customer.form</field>
            <field name="model">rahisi.customer</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <!-- Title -->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Customer Name"/>
                            </h1>
                        </div>

                        <!-- Group Fields -->
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="address_id"/>
                                <field name="active"/>
                            </group>
                        </group>

                        <!-- Job History in Notebook -->
                        <notebook>
                            <page string="Job History">
                                <field name="job_history">
                                    <tree>
                                        <field name="name"/>
                                        <field name="provider_id"/>
                                        <field name="service_id"/>
                                        <field name="date"/>
                                        <field name="state"/>
                                        <field name="total_price" widget="monetary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter-->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <!-- KANBAN VIEW -->
        <record id="view_rahisi_customer_kanban" model="ir.ui.view">
            <field name="name">rahisi.customer.kanban</field>
            <field name="model">rahisi.customer</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('rahisi.customer', 'image_128', record.id.raw_value)}); background-position: center; background-size: cover;">
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.email.raw_value" class="o_kanban_record_subtitle">
                                        <field name="email"/>
                                    </div>
                                    <div t-if="record.phone.raw_value" class="o_kanban_tags">
                                        <field name="phone"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_rahisi_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">rahisi.customer</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first customer!
                </p>
            </field>
        </record>
        <!-- Action for Browsing Services -->
        <record id="action_rahisi_browse_services" model="ir.actions.act_window">
            <field name="name">Browse Services</field>
            <field name="res_model">rahisi.service</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('active', '=', True)]</field>
            <field name="context">{'search_default_active': 1, 'create': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
            No services available at the moment!
                </p>
                <p>
            Check back later for available services.
                </p>
            </field>
        </record>

    </data>
</odoo>
