<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--    SwiftStay Booking Views-->

        <!--List View-->
        <record id="view_swiftstay_booking_tree" model="ir.ui.view">
            <field name="name">swiftstay.booking.tree</field>
            <field name="model">swiftstay.booking</field>
            <field name="arch" type="xml">
                <tree string= "Booking">
                    <field name="guest_name"/>
                    <field name="id_no"/>
                    <field name="passport_no"/>
                    <field name="email"/>
                    <field name="phone_no"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="duration"/>
                    <field name="name"/>
                    <field name="room_no" domain="[('room_status', '=', 'available'), ('room_type_id', '=', name)]"/>

                    <field name="price_per_night"/>
                    <field name="is_checked_out"/>


                </tree>
            </field>
        </record>



        <record id="view_swiftstay_booking_form" model="ir.ui.view">
            <field name="name">swiftstay.booking.form</field>
            <field name="model">swiftstay.booking</field>
            <field name="arch" type="xml">
                <form string="Booking">
                    <sheet>
                        <group>
                            <field name="guest_name"/>
                            <field name="id_no"/>
                            <field name="passport_no"/>
                            <field name="email"/>
                            <field name="phone_no"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="duration"/>
                            <field name="name"/>
                            <field name="room_no" domain="[('room_status', '=', 'available'), ('room_type_id', '=', name)]"/>
                            <field name="price_per_night"/>
                            <field name="is_checked_out"/>



                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>



        <record id="view_swiftstay_booking_kanban" model="ir.ui.view">
            <field name="name">swiftstay.booking.kanban</field>
            <field name="model">swiftstay.booking</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1" default_group_by="is_checked_out">
                    <field name="guest_name"/>
                    <field name="id_no"/>
                    <field name="passport_no"/>
                    <field name="email"/>
                    <field name="phone_no"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="duration"/>
                    <field name="name"/>
                    <field name="room_no"/>
                    <field name="price_per_night"/>
                    <field name="is_checked_out"/>


                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>Guest Name: <field name="guest_name"/>
                                        </li>
                                        <li>ID Number: <field name="id_no"/>
                                        </li>
                                        <li>Passport Number: <field name="passport_no"/>
                                        </li>
                                        <li>Email Address <field name="email"/>
                                        </li>
                                        <li>Phone Number: <field name="phone_no"/>
                                        </li>
                                        <li>Check-in: <field name="check_in"/>
                                        </li>
                                        <li>Check-out: <field name="check_out"/>
                                        </li>
                                        <li>Duration: <field name="duration"/>
                                        </li>
                                        <li>Room Type: <field name="name"/>
                                        </li>
                                        <li>Room Number: <field name="room_no"/>
                                        </li>
                                        <li>Price Per Night: <field name="price_per_night"/>
                                        </li>
                                        <li>Checked Out: <field name="is_checked_out"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_swiftstay_booking_search" model="ir.ui.view">
            <field name="name">swiftstay.booking.search</field>
            <field name="model">swiftstay.booking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="guest_name"/>
                    <field name="room_no"/>
                    <field name="email"/>
                    <field name="phone_no"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="is_checked_out"/>


                    <filter name="filter_checked_out" string="Checked Out" domain="[('is_checked_out', '=', True)]"/>
                    <filter name="filter_not_checked_out" string="Not Checked Out" domain="[('is_checked_out', '=', False)]"/>
                    <filter name="filter_upcoming_checkin" string="Upcoming Bookings" domain="[('check_in', '>=', context_today())]"/>
                    <filter name="filter_past_checkouts" string="Past Bookings" domain="[('check_out', '&lt;', context_today())]"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_guest" string="Guest Name" context="{'group_by': 'guest_name'}"/>
                        <filter name="group_by_room" string="Room Number" context="{'group_by': 'room_no'}"/>
                        <filter name="group_by_check_in" string="Check-in Date" context="{'group_by': 'check_in'}"/>
                        <filter name="group_by_check_out" string="Check-out Date" context="{'group_by': 'check_out'}"/>
                        <filter name="group_by_checked_out" string="Checked Out Status" context="{'group_by': 'is_checked_out'}"/>
                    </group>

                </search>
            </field>
        </record>



        <record id="action_swiftstay_booking" model="ir.actions.act_window">
            <field name="name">Booking</field>
            <field name="res_model">swiftstay.booking</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_swiftstay_booking_search"/>

        </record>

    </data>
</odoo>