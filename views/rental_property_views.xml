<odoo>
    <!-- Tree View -->
    <record id="view_rental_property_tree" model="ir.ui.view">
        <field name="name">rental.property.tree</field>
        <field name="model">rental.property</field>
        <field name="arch" type="xml">
            <tree string="Rental Properties">
                <field name="name"/>
                <field name="address"/>
                <field name="owner_id"/>
                <field name="property_type"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rental_property_form" model="ir.ui.view">
        <field name="name">rental.property.form</field>
        <field name="model">rental.property</field>
        <field name="arch" type="xml">
            <form string="Rental Property">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="owner_id"/>
                        <field name="property_type"/>
                    </group>
                    <group>
                        <field name="rental_units_ids"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_rental_property_kanban" model="ir.ui.view">
        <field name="name">rental.property.kanban</field>
        <field name="model">rental.property</field>
        <field name="arch" type="xml">
            <kanban string="Rental Properties">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div><span class="fa fa-map-marker"/> <field name="address"/></div>
                            <div><span class="fa fa-user"/> <field name="owner_id"/></div>
                            <div><span class="fa fa-home"/> <field name="property_type"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
