<odoo>
    <!-- Tree View -->
    <record id="view_rental_unit_tree" model="ir.ui.view">
        <field name="name">rental.unit.tree</field>
        <field name="model">rental.unit</field>
        <field name="arch" type="xml">
            <tree string="Rental Units">
                <field name="name"/>
                <field name="property_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rental_unit_form" model="ir.ui.view">
        <field name="name">rental.unit.form</field>
        <field name="model">rental.unit</field>
        <field name="arch" type="xml">
            <form string="Rental Unit">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_id"/>
                        <field name="tenant_id"/>
                        <field name="rent_price"/>
                        <field name="status"/>
                        <field name="rental_management_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_rental_unit_kanban" model="ir.ui.view">
        <field name="name">rental.unit.kanban</field>
        <field name="model">rental.unit</field>
        <field name="arch" type="xml">
            <kanban string="Rental Units">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div><span class="fa fa-home"/> <field name="property_id"/></div>
                            <div><span class="fa fa-user"/> <field name="tenant_id"/></div>
                            <div><span class="fa fa-money"/> <field name="rent_price"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
